{
  "name": "@ipare/static",
  "version": "1.2.0",
  "description": "Ipare 的静态资源插件",
  "engines": {
    "node": ">=12.16.0"
  },
  "homepage": "https://github.com/ipare/static",
  "repository": {
    "type": "git",
    "url": "https://github.com/ipare/static"
  },
  "keywords": [
    "ipare",
    "static-file",
    "static-website"
  ],
  "bugs": {
    "url": "https://github.com/ipare/static/issues",
    "email": "support@hal.wang"
  },
  "main": "dist/index.js",
  "scripts": {
    "prebuild": "npm run lint",
    "build": "sh scripts/build.sh",
    "prepublish": "npm run build",
    "publish:beta": "npm run build && npm publish --tag=beta --access=public",
    "lint": "eslint src test --ext .ts"
  },
  "author": "hal-wang",
  "license": "MIT",
  "dependencies": {
    "@ipare/core": "^1.6.3",
    "mime": "^3.0.0"
  },
  "devDependencies": {
    "@types/mime": "^2.0.3",
    "@types/node": "^18.6.1",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  },
  "peerDependencies": {
    "@ipare/core": "~1"
  },
  "files": [
    "/.github/*",
    "/dist/*",
    "/scripts/*",
    "/src/*",
    "/test/*",
    ".eslintrc.js",
    ".gitignore",
    "LICENSE",
    "package.json",
    "README.md",
    "tsconfig.json"
  ]
}
