{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "subject-case": [
      2,
      "always",
      ["sentence-case", "start-case", "pascal-case", "upper-case", "lower-case"]
    ],
    "type-enum": [
      2,
      "always",
      [
        "build",
        "chore",
        "ci",
        "docs",
        "feat",
        "fix",
        "perf",
        "refactor",
        "revert",
        "style",
        "test"
      ]
    ],
    "scope-enum": [
      1,
      "always",
      [
        "release",
        "core",
        "alifc",
        "filter",
        "http",
        "inject",
        "jwt",
        "koa",
        "lambda",
        "logger",
        "mva",
        "pipe",
        "router",
        "static",
        "swagger",
        "testing",
        "validator",
        "view"
      ]
    ]
  }
}
